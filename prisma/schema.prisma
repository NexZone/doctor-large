generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model autorole {
  guildId          String   @id
  activated        Boolean  @default(false)
  roleIds          String[] @default([])
  moderatorTag     String?
  moderatorId      String?
  discordTimestamp String?
}

model giveaway {
  guildId             String
  giveawayId          Int      @default(autoincrement())
  giveawayDescription String?
  channelId           String?
  messageId           String?
  hostUserId          String
  hostUserTag         String
  hostUserAvatarUrl   String
  userEntriesIds      String[] @default([])
  createdTimestamp    Int
  endTimestamp        Int?
  active              Boolean  @default(false)
  lockEntries         Boolean  @default(false)

  @@id([guildId, giveawayId])
}
