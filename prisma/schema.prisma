generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model options {
  guild_id        String   @id
  moderator_roles String[]
  event_channel   String?
}

model submission {
  user_id           String
  guild_id          String
  discord_timestamp String
  attachment_url    String
  user_comment      String?
  channel_id        String
  message_id        String?

  @@id([user_id, guild_id])
}
